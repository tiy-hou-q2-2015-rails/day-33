<div class="pull-right">
  <%= link_to "New Contact", new_contact_path, class: 'btn btn-default' %>
</div>

<h3>Number of Contacts: <%= @contacts.count %> </h3>
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Last Name</th>
      <th>First Name</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.last_name %></td>
        <td><%= contact.first_name %></td>

        <td>
          <%= link_to 'Edit', edit_contact_path(id: contact.id) %> |
          <%= link_to 'Show', contact_path(id: contact.id) %> |
          <%= link_to 'Delete', contact_path(id: contact.id), method: :delete, data: {confirm: "Ya Sure?"} %>

        </td>
      </tr>

    <% end %>
  </tbody>
</table>
